# Database
DATABASE_URL=postgresql://automation_user:changeme_in_production@localhost:5433/automation_cowork
SOURCE_DATABASE_URL=postgresql://user:password@source-host:5432/source_db
TARGET_DATABASE_URL=postgresql://user:password@warehouse-host:5432/warehouse_db

# Lead Enrichment APIs (to be obtained during setup)
HUNTER_API_KEY=your_hunter_key_here
CLEARBIT_API_KEY=your_clearbit_key_here
APOLLO_API_KEY=your_apollo_key_here
SNOV_API_KEY=your_snov_key_here

# Email Service (choose one)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=notifications@automation-cowork.local
NOTIFY_EMAIL=your_email@gmail.com
NOTIFY_ON_SUCCESS=True
NOTIFY_ON_FAILURE=True
# OR use SendGrid
SENDGRID_API_KEY=your_sendgrid_key_here

# AI APIs (optional, for self-correction)
OPENAI_API_KEY=sk-proj-...

# Scheduling
SCHEDULER_TIMEZONE=Asia/Jerusalem
MARKETING_ENABLED=True
MARKETING_DAILY_RUN_HOUR=8
MARKETING_DAILY_RUN_MINUTE=5

# Marketing asset ingestion (ResumeBuilder repo branch)
MARKETING_ASSETS_REPO_URL=https://github.com/nadavyigal/new-ResumeBuilder-ai-.git
MARKETING_ASSETS_BRANCH=version-2-marketing
MARKETING_ASSETS_LOCAL_DIR=runtime/marketing-assets
MARKETING_CSV_RELATIVE_PATH=docs/gtm/week-1-social-publishing-sheet.csv
MARKETING_EXECUTION_MODE=dry-run

# Optional publisher webhooks for live mode
LINKEDIN_PUBLISHER_WEBHOOK_URL=
X_PUBLISHER_WEBHOOK_URL=
REDDIT_PUBLISHER_WEBHOOK_URL=
COMMUNITY_PUBLISHER_WEBHOOK_URL=
NEWSLETTER_PUBLISHER_WEBHOOK_URL=

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/automation.log

# App
ENVIRONMENT=development
DEBUG=True
